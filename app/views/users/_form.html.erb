<%= form_with model: user,  url: (user.new_record? ? create_user_path : user_path(user)), method: (user.new_record? ? :post : :patch), local: true do |f| %>
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="mb-3">
            <%= f.label :full_name, class: "form-label" %>
            <%= f.text_field :full_name, class: "form-control" %>
        </div>

        <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", id: "passwordInput", autocomplete: "new-password" %>
            <% if f.object.persisted? %>
            <small class="text-muted">Leave blank if you don't want to change password</small>
            <% end %>
            <div class="form-check mt-1">
                <input type="checkbox" class="form-check-input" onclick="togglePass('passwordInput')">
                <label class="form-check-label">Show Password</label>
            </div>
        </div>

        <div class="mb-3">
            <%= f.label :role, class: "form-label" %>
            <%= f.select :role, [["Admin", "admin"], ["Project Manager", "project_manager"], ["Developer", "developer"], ["Tester", "tester"]], { prompt: "Select Role" }, { class: "form-select form-control" } %>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
            <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control", id: "confirmPasswordInput", autocomplete: "new-password" %>
            <div class="form-check mt-1">
                <input type="checkbox" class="form-check-input" onclick="togglePass('confirmPasswordInput')">
                <label class="form-check-label">Show Password</label>
            </div>
        </div>

        <div class="mb-3">
            <%= f.label :status, class: "form-label d-block" %>
            <div class="form-check form-check-inline">
                <%= f.radio_button :status, true, class: "form-check-input", id: "status_active" %>
                <%= f.label :status_active, "Active", class: "form-check-label" %>
            </div>
            <div class="form-check form-check-inline">
                <%= f.radio_button :status, false, class: "form-check-input", id: "status_inactive" %>
                <%= f.label :status_inactive, "Inactive", class: "form-check-label" %>
            </div>
        </div>
    </div>

    <div class="col-12 mt-3">
        <%= f.submit f.object.new_record? ? "Submit User" : "Update User", class: "btn btn-primary" %>
    </div>
</div>
<% end %>