                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Users</h1>
                        <a href="/users/new" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i>Create New User</a>
                    </div>
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">

                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Emails</th>
                                            <th>Role</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>Emails</th>
                                            <th>Role</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% @users.each do |user| %>
                                        <tr>
                                            <td><%= user.full_name %></td>
                                            <td><%= user.email %></td>
                                            <td style="text-transform: capitalize"><%= user.roles %></td>
                                            <td>
                                                <%  if user.status %>
                                                <p>&#9989;</p>
                                                <% else %>
                                                <p>&#10060;</p>
                                                <%end%>
                                            </td>
                                            <td class="d-flex">
                                                <%= link_to "Edit", edit_user_path(user), class: "btn btn-success" %>

                                                <%= button_to "Delete",
                                                    user_path(user),
                                                    method: :delete,
                                                    class: "btn btn-danger mx-2",
                                                    form: { data: { turbo_confirm: "Are you sure you want to delete this user?" } } %>
                                            </td>

                                        </tr>
                                        <% end %>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>


