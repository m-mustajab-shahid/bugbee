<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Users</h1>
        <a href="/users/new" class="btn btn-primary btn-sm shadow-sm">
            Create New User
        </a>
    </div>

    <!-- Users Table -->
    <div class="card shadow mb-4">
        <div class="card-body">

            <!-- Per Page Dropdown -->
            <div class="mb-3 d-flex justify-content-end">
                <form method="get" class="form-inline">
                    <label class="mr-2" for="per_page">Users per page:</label>
                    <select name="per_page" id="per_page" class="form-control form-control-sm" onchange="this.form.submit()">
                        <% [3, 5, 10, 20, 50].each do |limit| %>
                        <option value="<%= limit %>" <%= 'selected' if params[:per_page].to_i == limit %>><%= limit %></option>
                        <% end %>
                    </select>
                </form>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot class="thead-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <% @users.each do |user| %>
                        <tr>
                            <td><%= user.full_name %></td>
                            <td><%= user.email %></td>
                            <td style="text-transform: capitalize"><%= user.roles %></td>
                            <td class="text-center">
                                <% if user.status %>
                                <span class="text-success">&#9989;</span>
                                <% else %>
                                <span class="text-danger">&#10060;</span>
                                <% end %>
                            </td>
                            <td class="d-flex justify-content-center">
                                <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-success btn-sm mr-2" %>
                                <%= button_to "Delete", user_path(user), method: :delete,
                        class: "btn btn-outline-danger btn-sm",
                        form: { data: { turbo_confirm: "Are you sure you want to delete this user?" } } %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>

                <!-- Pagination -->
                <div class="d-flex justify-content-center mt-3">
                    <%= paginate @users %>
                </div>

            </div>
        </div>
    </div>

</div>