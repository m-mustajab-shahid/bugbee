<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">
        Edit User <b><%= @user.full_name %></b>
    </h1>

    <div class="card shadow mb-4">
        <div class="card-body">

            <%= form_with model: @user, method: :patch, local: true do |f| %>

            <div class="row">

                <div class="col-lg-6 mb-4">

                    <div class="mb-3">
                        <%= f.label :full_name, class: "form-label" %>
                        <%= f.text_field :full_name, class: "form-control" %>
                    </div>

                    <div class="mb-3">
                        <%= f.label :password, class: "form-label" %>
                        <%= f.password_field :password,
                    class: "form-control",
                    id: "passwordInput",
                    autocomplete: "new-password" %>
                        <small class="text-muted">Leave blank if you don't want to change password</small>
                        <br>
                        <input type="checkbox" onclick="togglePassword('passwordInput')"> Show Password
                    </div>

                    <div class="mb-3">
                        <%= f.label :role, class: "form-label" %>
                        <%= f.select :roles,
  [["Admin", "admin"],
   ["Project Manager", "project_manager"],
   ["Developer", "developer"],
   ["Tester", "tester"]],
  {},
  { class: "form-select form-control" } %>

                    </div>

                </div>

                <div class="col-lg-6 mb-4">

                    <div class="mb-3">
                        <%= f.label :email, class: "form-label" %>
                        <%= f.email_field :email, class: "form-control" %>
                    </div>

                    <div class="mb-3">
                        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
                        <%= f.password_field :password_confirmation,
                    class: "form-control",
                    id: "confirmPasswordInput",
                    autocomplete: "new-password" %>
                        <br>
                        <input type="checkbox" onclick="togglePassword('confirmPasswordInput')"> Show Password
                    </div>
                    <div class="mb-3">
                        <%= f.label :status, class: "form-label d-block" %>

                        <div class="form-check form-check-inline">
                            <%= f.radio_button :status, true, class: "form-check-input", id: "status_active" %>
                            <%= f.label :status_active, "Active", class: "form-check-label" %>
                        </div>

                        <div class="form-check form-check-inline">
                            <%= f.radio_button :status, false, class: "form-check-input", id: "status_inactive" %>
                            <%= f.label :status_inactive, "Inactive", class: "form-check-label" %>
                        </div>
                    </div>



                </div>

            </div>

            <div class="mb-3">
                <%= f.submit "Update User", class: "btn btn-primary" %>
            </div>

            <% end %>

            <!-- Flash Messages -->
            <% if flash[:notice] %>
            <div class="alert alert-success mt-3"><%= flash[:notice] %></div>
            <% end %>

            <% if flash[:alert] %>
            <div class="alert alert-danger mt-3"><%= flash[:alert] %></div>
            <% end %>

        </div>
    </div>
</div>

<script>
    function togglePassword(fieldId) {
        var field = document.getElementById(fieldId);
        field.type = field.type === "password" ? "text" : "password";
    }
</script>