<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Create New User</h1>

    <%# Flash Messages %>
    <% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>

    <%# Validation Errors %>
    <% if @user.errors.any? %>
    <div class="alert alert-danger">
        <h5><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h5>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="card shadow mb-4">
        <div class="card-body">

            <%= form_with url: create_user_path, local: true do |f| %>

            <div class="row">

                <!-- Left Column -->
                <div class="col-lg-6 mb-4">

                    <div class="mb-3">
                        <%= f.label :full_name, class: "form-label" %>
                        <%= f.text_field :full_name, class: "form-control" %>
                    </div>

                    <div class="mb-3">
                        <%= f.label :password, class: "form-label" %>
                        <%= f.password_field :password, class: "form-control", id: "passwordInput" %>
                        <div class="form-check mt-1">
                            <input type="checkbox" class="form-check-input" onclick="togglePass('passwordInput')">
                            <label class="form-check-label">Show Password</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <%= f.label :role, class: "form-label" %>
                        <%= f.select :role,
                    [["Admin", "admin"],
                     ["Project Manager", "project_manager"],
                     ["Developer", "developer"],
                     ["Tester", "tester"]],
                    { prompt: "Select Role" },
                    class: "form-select form-control" %>
                    </div>

                </div>

                <!-- Right Column -->
                <div class="col-lg-6 mb-4">

                    <div class="mb-3">
                        <%= f.label :email, class: "form-label" %>
                        <%= f.email_field :email, class: "form-control" %>
                    </div>

                    <div class="mb-3">
                        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
                        <%= f.password_field :password_confirmation, class: "form-control", id: "confirmPasswordInput" %>
                        <div class="form-check mt-1">
                            <input type="checkbox" class="form-check-input" onclick="togglePass('confirmPasswordInput')">
                            <label class="form-check-label">Show Password</label>
                        </div>
                    </div>
                    

                </div>

                <div class="col-12 mt-3">
                    <%= f.submit "Submit User", class: "btn btn-primary" %>
                </div>

            </div>

            <% end %>

        </div>
    </div>
</div>

<script>
    function togglePass(id) {
        var x = document.getElementById(id);
        x.type = (x.type === "password") ? "text" : "password";
    }
</script>