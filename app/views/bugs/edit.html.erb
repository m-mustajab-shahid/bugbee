<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Create New Bug</h1>

    <%# Flash Messages %>
    <% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>

    <%# Validation Errors %>
    <% if @bug.errors.any? %>
    <div class="alert alert-danger">
        <h5><%= pluralize(@bug.errors.count, "error") %> prohibited this bug from being saved:</h5>
        <ul>
            <% @bug.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="card shadow mb-4">
        <div class="card-body">

            <%= form_with(model: [@project, @bug], local: true) do |f| %>

            <div class="row">

                <!-- Left Column -->
                <div class="col-lg-6 mb-4">

                    <div class="mb-3">
                        <%= f.label :title, class: "form-label" %>
                        <%= f.text_field :title, class: "form-control" %>
                    </div>

                    <div class="mb-3">
                        <%= f.label :description, "Description", class: "form-label" %>
                        <%= f.text_area :description, class: "form-control" %>
                    </div>
                    <div class="mb-3">
                        <%= f.label :step_to_reproduce, "Step to reproduce", class: "form-label" %>
                        <%= f.text_area :step_to_reproduce, class: "form-control" %>
                    </div>
                    <%
=begin%>
 <div class="mb-3">
                        <%= f.label :status, class: "form-label" %>
                        <%= f.select :status,
                    [["Open", "open"],
                     ["Assigned", "assigned"],
                     ["In-Progress", "in-progress"],
                     ["Closed", "closed"],
                     ["Reopened", "reopened"],
                     ["Resolved", "resolved"]],
                    { prompt: "Select Status" },
                    class: "form-select form-control" %>
                    </div> 
<%
=end%>

                </div>

                <!-- Right Column -->
                <div class="col-lg-6 mb-4">

                    <div class="mb-3">
                        <%= f.label :priority, class: "form-label" %>
                        <%= f.select :priority,
                    [["Low", "low"],
                     ["Medium", "medium"],
                     ["High", "high"],
                     ["Critical", "critical"]],
                    { prompt: "Select priority" },
                    class: "form-select form-control" %>
                    </div>
                    <div class="mb-3">
                        <%= f.label :severity, class: "form-label" %>
                        <%= f.select :severity,
                    [["Minor", "minor"],
                     ["Major", "major"],
                     ["Blocker", "blocker"]],
                    { prompt: "Select severity" },
                    class: "form-select form-control" %>
                    </div>
                    <div class="mb-3">
                        <%= f.label :actual_result, "Actual Result", class: "form-label" %>
                        <%= f.text_area :actual_result, class: "form-control" %>
                    </div>
                    <div class="mb-3">
                        <%= f.label :expected_results, "Expected Result", class: "form-label" %>
                        <%= f.text_area :expected_results, class: "form-control" %>
                    </div>

                </div>

                <div class="col-12 mt-3">
                    <%= f.submit "Submit", class: "btn btn-primary" %>
                </div>

            </div>

            <% end %>

        </div>
    </div>
</div>

<script>
    function togglePass(id) {
        var x = document.getElementById(id);
        x.type = (x.type === "password") ? "text" : "password";
    }
</script>