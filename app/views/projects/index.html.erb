                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Projects</h1>
                        <a href="/projects/new" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i>Create New Project</a>
                    </div>


                    <!-- Flash Messages -->
                    <% if flash[:notice] %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= flash[:notice] %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% end %>

                    <% if flash[:alert] %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= flash[:alert] %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% end %>
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">

                        <div class="card-body">
                            <div class="mb-3 d-flex justify-content-end">
                                <form method="get" class="form-inline">
                                    <label class="mr-2" for="per_page">Users per page:</label>
                                    <select name="per_page" id="per_page" class="form-control form-control-sm" onchange="this.form.submit()">
                                        <% [3, 5, 10, 20, 50].each do |limit| %>
                                        <option value="<%= limit %>" <%= 'selected' if params[:per_page].to_i == limit %>><%= limit %></option>
                                        <% end %>
                                    </select>
                                </form>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Name</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot class="thead-light">
                                        <tr>
                                            <th>Name</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% @projects.each do |project| %>
                                        <tr>
                                            <td><%= project.name %></td>
                                            <td><%= project.start_date %></td>
                                            <td><%= project.end_date %></td>
                                            <td style="text-transform: capitalize"><%= project.status %></td>
                                            <td class="d-flex b-none">
                                                <%= link_to "Show",project_path(project), class: "btn btn-primary" %>
                                                <%= link_to "Edit",edit_project_path(project), class: "btn btn-success mx-2" %>

                                                <%= button_to "Delete",
                                                    project_path(project),
                                                    method: :delete,
                                                    class: "btn btn-danger mx-2",
                                                    form: { data: { turbo_confirm: "Are you sure you want to delete this project?" } } %>
                                            </td>

                                        </tr>
                                        <% end %>

                                    </tbody>
                                </table>
                                <!-- Pagination -->
                                <div class="d-flex justify-content-center mt-3">
                                    <%= paginate @projects %>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>